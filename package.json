{
  "name": "orizzonte",
  "version": "0.3.7",
  "description": "React components for a horizontal, filtered search UI",
  "main": "./dist/orizzonte.min.js",
  "scripts": {
    "analyze": "npm run stats && webpack-bundle-analyzer ./stats.json ./dist",
    "build": "webpack --progress --config ./config/webpack.config.prod.js",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "eslint .",
    "lint-fix": "npm run lint -- --fix",
    "prepare": "npm run test && npm run build",
    "stats": "webpack --env production --profile --json --config ./config/webpack.config.prod.js > stats.json",
    "storybook": "start-storybook -p 9001",
    "storybook-deploy": "storybook-to-ghpages",
    "test": "jest"
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js|jsx}"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "./config/shim.js",
      "./config/jest.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlobernardini/orizzonte.git"
  },
  "keywords": [
    "ui-components",
    "search",
    "filtering",
    "horizontal",
    "query-builder",
    "api"
  ],
  "author": "Carlo Bernardini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlobernardini/orizzonte/issues"
  },
  "homepage": "https://carlobernardini.github.io/orizzonte",
  "devDependencies": {
    "@dump247/storybook-state": "^1.5.0",
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.10",
    "@storybook/react": "^3.4.8",
    "@storybook/storybook-deployer": "^2.3.0",
    "array-move": "^1.0.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^23.4.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^2.1.6",
    "sass-loader": "^7.0.3",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "classnames": "^2.2.6",
    "diacritics": "^1.3.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.6.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  }
}
